[alias]
	st = status
	cat = cat-file
	ffwd = pull --rebase
	changes = diff --name-status -r
	diffstat = diff --stat -r
	pick = add -p -A
        conedit = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
        conadd = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
        new-workdir = "!git-new-workdir || exit 1"
[color]
        branch = auto
        diff = auto
        grep = auto
        interactive = auto
        ui = auto
        status = auto
        showbranch = auto
