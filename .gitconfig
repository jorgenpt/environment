# vim: tabstop=4 softtabstop=4 shiftwidth=4 noexpandtab
[user]
	name = Jørgen Tjernø
	email = jorgen@tjer.no
	signingkey = BBCE81D7
[alias]
	co = checkout
	ci = commit -v
	st = status -sb
	br = branch
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pick = add -p -A
	psuh = push
	cat = cat-file
	ffwd = pull --rebase
	as = rebase --autosquash --interactive
	changes = diff --name-status -r
	diffstat = diff --stat -r
	conedit = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
	conadd = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	new-workdir = "!git-new-workdir || exit 1"
[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	ui = auto
	status = auto
	showbranch = auto
[difftool]
	prompt = false
[diff]
	renames = copies
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input
[mergetool]
	prompt = false
	keepBackup = false
[push]
	default = simple
[include]
	path = .gitconfig_local
[includeIf "gitdir:/Users/**"]
	path = ~/.gitconfig_macos
[includeIf "gitdir:?:**"]
	path = ~/.gitconfig_windows
[includeIf "gitdir:/home/**"]
	path = ~/.gitconfig_linux
